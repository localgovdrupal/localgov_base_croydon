{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}

{# Header search sumbit #}
{% set form_input_submit = 'header-search-block-form-submit' %}

{# Changing the header's search submit input element to a button element #}
{% if form_input_submit in attributes.class %}
    <button class="btn icon-search" type="submit" value="Search" aria-label="Search this website" title="Search this website"><span class="fa fa-search" aria-hidden="true"></span></button>
{% else %}
    <input{{ attributes }} />{{ children }}
{% endif %}